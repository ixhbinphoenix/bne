---
import ModalButton from '../components/ModalButton.astro';

export interface Props {
  title: string
}

const {title} = Astro.props;
---

<html>
    <head>
        <title>{title}</title>
    </head>
    <body style="margin: 0px;">
        <div id="inputBox">
            <h1>Login</h1>
            <input placeholder="Nutzername" id="username" type="text"/>
            <input placeholder="Passwort" id="password" type="password"/>
            <ModalButton id="submit">Login</ModalButton>
        </div>
    </body>
    <style>
        #inputBox{
            opacity: 40;
            font-family: Verdana;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: linear-gradient(#181926, #363a4f);
        }
        input{
            border-radius: 7px;
            padding: .5rem;
            font-size: 1.5rem;
            color: #cad3f5;
            margin-bottom: 3vh;
            height: 7vh;
            width: 30vw;
            border: solid;
            border-bottom-width: 3px;
            background-color: #1e2030;
        }
        input:focus{
            outline: none;
            border-bottom-color: gray;
        }
        h1{
            background: linear-gradient(90deg,rgb(198,160,246) 0%,rgb(237,135,150) 50%,rgb(238,212,159) 100%);
            background-size: 20vw;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 2.8rem;
        }
        #submit{
            color: #cad3f5;
            font-size: 1.5rem;
            width: 10vw;
            box-shadow: none;
            border: none;
            background-color: #363a4f;
            padding: .5rem;
        }
        #submit:hover{
            background-color: #494d64;
        }
    </style>
    <script>
        const username: HTMLInputElement = document.getElementById("username") as HTMLInputElement
        const password: HTMLInputElement = document.getElementById("password") as HTMLInputElement
        document.getElementById("submit")!.addEventListener('click', () => {
            alert(username.value + " " + password.value)
        })
    </script>
</html>