---
import ModalButton from '../components/ModalButton.astro';
import LoginBox from '../components/LoginBox.astro';

export interface Props {
  title: string
}

const {title} = Astro.props;
---

<html>
    <head>
        <title>{title}</title>
    </head>
    <body style="margin: 0px;">
        <div id="login-page">
            <LoginBox></LoginBox>
            <ModalButton id="submit">Login</ModalButton>
        </div>
    </body>
    <style>
        html {
            position: absolute;
            height: 100%;
            width: 100%;
            background-image: linear-gradient(#181926, #363a4f);
        }
        body {
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            width: 100%;
            height: 100%;
        }
        #login-page {
            position: relative;
            height: 100%;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
    </style>
    <script>
        const username: HTMLInputElement = document.getElementById("username") as HTMLInputElement
        const password: HTMLInputElement = document.getElementById("password") as HTMLInputElement
        document.getElementById("submit")!.addEventListener('click', () => {
            alert(username.value + " " + password.value)
        })
    </script>
</html>