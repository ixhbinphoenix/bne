---
import RootLayout from "./RootLayout.astro";

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<RootLayout {title}>
  <slot />
</RootLayout>

<style>
  html {
    position: absolute;
    height: 100%;
    width: 100%;
    background-color: #24273a;
  }
  body {
    background-image: url("/index-background.svg");
    font-family: Inter, sans-serif;
    width: 100%;
    height: 100%;
    margin: 0px;
  }
</style>
