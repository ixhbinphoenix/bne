---
import RootLayout from './RootLayout.astro';

export interface Props {
  title: string
}

const {title} = Astro.props;
---

<RootLayout title={title}>
  <slot/>
</RootLayout>

<style lang="scss">
    html {
        position: absolute;
        height: 100%;
        width: 100%;
        background-image: linear-gradient(#181926, #363a4f);
    }
    body {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        width: 100%;
        height: 100%;
        margin: 0px;
    }
</style>
