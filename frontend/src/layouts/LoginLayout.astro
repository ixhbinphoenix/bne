---
import RootLayout from "./RootLayout.astro";

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<RootLayout {title}>
  <slot />
</RootLayout>

<style lang="scss">
  html {
    position: absolute;
    height: 100%;
    width: 100%;
    background-color: #181926;
  }
  body {
    font-family: Inter, sans-serif;
    width: 100%;
    height: 100%;
    margin: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
