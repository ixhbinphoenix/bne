---
import RootLayout from "./RootLayout.astro";
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<RootLayout {title}>
  <slot />
</RootLayout>

<style lang="scss">
  html {
    height: 100%;
    width: 100%;
  }
  body {
    height: 100%;
    margin: 0px;
    background-image: url("/index-background.svg");
    font-family: Inter;
    background-color: var(--background-color);
    color: var(--text-color);
  }
</style>
