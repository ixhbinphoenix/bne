---
import logo from "../icons/logo-animated-no-bg.svg"
---

<div id="titlebar">
  <img src={logo} alt="error" class="logo">
  <a href="/login" id="login-button-link"><button id="login-button">Sign up</button></a>
</div>

<style lang="scss">
  #titlebar {
    position: relative;
    display: flex;
    width: 100%;
    border-bottom: 0.5vh solid #181926;
    background-color: #1e2030;
    margin-top: 0;
    padding-top: 1px;

    &> .logo {
      margin-left: .5%;
      height: 100%;
      position: absolute;
      user-select: none;
      -webkit-user-drag: none;
      -moz-user-select: none;
      cursor: pointer;
    }
  }
  #titlebar-title {
    margin-left: 5vw;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    font-size: 2rem;
    background: rgb(198,160,246);
    background: linear-gradient(90deg, rgb(198, 160, 246) 0%, rgb(237, 135, 150) 50%, rgb(238, 212, 159) 100%); 
    background-size: 250%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  #login-button-link {
    &>#login-button {
      align-self: center;
      border-radius: 15px;
      font-size: 1.2rem;
      padding: 10px;
      border: 3px solid #cad3f5;
      background-color: #1e2030;
      color: #cad3f5;
      cursor: pointer;

      &:active {
        transform: translateY(4px) !important;
      }

      &:hover {
        transform: translateY(2px);
      }
    }
    margin-left: auto;
    margin-right: 4vw;
    margin-top: 1.5vh;
    margin-bottom: 1vh;
  }
</style>
