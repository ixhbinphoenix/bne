---
import ResetPasswordLayout from "../../layouts/ResetPasswordLayout.astro";
import ResetEmail from "../../components/plan-components/settings-components/ResetEmail";
import { checkUUID } from "../../api/frontmatter";

let uuid = Astro.params.id?.toString();

if (uuid) {
  try {
    await checkUUID(uuid, "EmailReset");
  } catch (error) {
    return Astro.redirect("/404");
  }
} else {
  return Astro.redirect("/404");
}
