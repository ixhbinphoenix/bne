---
import ResetPasswordLayout from "../../layouts/ResetPasswordLayout.astro";
import VerifiyAccount from "../../components/plan-components/settings-components/VerifyAccount";
import { checkUUID } from "../../api/frontmatter";

let uuid = Astro.params.id?.toString();

if (uuid) {
  try {
    await checkUUID(uuid, "VerifyAccount");
  } catch (error) {
    return Astro.redirect("/404");
  }
} else {
  return Astro.redirect("/404");
}
---

<ResetPasswordLayout title="Account verifizieren">
  <VerifiyAccount {uuid} client:load />
</ResetPasswordLayout>
