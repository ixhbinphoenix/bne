---
import HomeTitleBar from "../components/HomeTitleBar.astro";
import IndexLayout from "../layouts/IndexLayout.astro";
import GenericButton from "../components/generics/GenericButton.astro";
---

<IndexLayout title="TheSchedule">
  <div id="main-content">
    <div id="title-content">
      <h1 id="front-title">TheSchedule</h1>
      <p id="front-subtitle">Dein Tag auf einen Blick</p>
    </div>
    <a href="/home"><GenericButton>Jetzt anmelden</GenericButton></a>
  </div>
</IndexLayout>

<style lang="scss">
  #main-content {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;

    & > #title-content {
      display: flex;
      justify-content: center;
      flex-direction: column;
      align-items: center;
      font-family: Inter, sans-serif;
      & > #front-title {
        font-size: max(4.5vw, 2.5rem);
        background: rgb(198, 160, 246);
        background: var(--text-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        user-select: none;
      }
      & > #front-subtitle {
        font-size: 1.25rem;
        color: #b8c0e0;
        text-align: center;
      }
    }
    & > a {
      display: flex;
      justify-content: center;
      text-decoration: none;
    }
  }
</style>
